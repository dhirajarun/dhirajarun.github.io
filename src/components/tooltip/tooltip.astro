---
import clsx from 'clsx';
const { label } = Astro.props;
---

<div data-tooltip-root class="group h-max w-max">
  <slot />
  <div
    data-tooltip-popup
    role="tooltip"
    class={clsx(
      'w-max absolute top-0 left-0',
      'bg-gray-200 dark:bg-gray-700 border-gray-300 dark:border-gray-600 text-gray-800 dark:text-gray-100',
      'rounded-sm p-1 text-xs border',
      'invisible opacity-0 group-hover:visible group-hover:opacity-100 group-hover:transition-opacity'
    )}
  >
    {label}
  </div>
</div>
